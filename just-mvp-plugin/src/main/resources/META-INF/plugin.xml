<idea-plugin>
    <id>com.bfu.just-mvp-plugin</id>
    <name>JustMvpGenerator</name>
    <version>1.0.0</version>
    <vendor email="fubofubo@hotmail.com" url="https://github.com/groooooomit">groooooomit</vendor>

    <description><![CDATA[
    This is a small plugin to quickly generate just-mvp template code.<br>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Java Mvp Classes. -->
        <action id="JustMvp.NewJavaMvpClassesAction" class="com.bfu.plugin.justmvp.NewJavaMvpClassesAction"
                text="Java Mvp Classes" description="Auto generate template sources for just-mvp (java)">
            <add-to-group
                    group-id="NewGroup"
                    anchor="after"
                    relative-to-action="Kotlin.NewFile"
            />
        </action>

        <!-- Kotlin Mvp Classes. -->
        <action id="JustMvp.NewKotlinMvpClassesAction" class="com.bfu.plugin.justmvp.NewKotlinMvpClassesAction"
                text="Kotlin Mvp Classes" description="Auto generate template sources for just-mvp (kotlin)">
            <add-to-group
                    group-id="NewGroup"
                    anchor="after"
                    relative-to-action="JustMvp.NewJavaMvpClassesAction"
            />
        </action>

    </actions>
</idea-plugin>